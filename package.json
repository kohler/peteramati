{
    "url": "https://github.com/kohler/peteramati/issues",
    "email": "ekohler@gmail.com",
    "repository": "github:kohler/peteramati",
    "scripts": {
        "build": "rollup -c"
    },
    "dependencies": {
        "linkify-it": "latest",
        "markdown-it": "latest",
        "markdown-it-katexx": "^3.2.0",
        "uglify-js": "^3.11.1"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "rollup": "^2.32",
        "rollup-plugin-eslint": "^7",
        "rollup-plugin-terser": "^7"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "jquery": true
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended"
        ],
        "rules": {
            "no-empty": [
                "error",
                {
                    "allowEmptyCatch": true
                }
            ],
            "no-control-regex": "off",
            "no-useless-escape": "off",
            "no-constant-condition": [
                "error",
                {
                    "checkLoops": false
                }
            ]
        },
        "globals": {
            "$pa": "writeable",
            "Terminal": "readonly",
            "hljs": "readonly",
            "markdownit": "readonly",
            "markdownit_katex": "readonly",
            "siteinfo": "readonly"
        }
    }
}
